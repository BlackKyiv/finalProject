<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/editions</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>



    <!-- Welcome files -->
    <welcome-file-list>

        <welcome-file>/WEB-INF/jsp/login.jsp</welcome-file>
        <welcome-file>/WEB-INF/jsp/index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Servlets  -->
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>ua.training.myWeb.Servlet</servlet-class>
    </servlet>

    <!-- ServletMapping  -->
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <!-- Filters  -->
    <filter>
        <filter-name>Encoding</filter-name>
        <filter-class>ua.training.myWeb.filters.EncodingFilter</filter-class>
    </filter>

    <filter>
        <filter-name>Auth</filter-name>
        <filter-class>ua.training.myWeb.filters.AuthFilter</filter-class>

        <init-param>
            <param-name>admin</param-name>
            <param-value></param-value>
        </init-param>
        <init-param>
            <param-name>user</param-name>
            <param-value>subscribe</param-value>
        </init-param>
        <init-param>
            <param-name>common</param-name>
            <param-value>logout noCommand profile main replenish cancelSubscription</param-value>
        </init-param>
        <init-param>
            <param-name>out-of-control</param-name>
            <param-value>login register main</param-value>
        </init-param>



    </filter>

    <!-- Filters  mapping-->
    <filter-mapping>
        <filter-name>Encoding</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>Auth</filter-name>
        <servlet-name>MainServlet</servlet-name>
    </filter-mapping>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/jsp/error.jsp</location>
    </error-page>

</web-app>